<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Skool" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black_charcoal</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/teal_200</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black_charcoal</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
        <item name="toolBarTint">@color/black_charcoal</item>
        <item name="bottomNavActiveTint">@color/teal_200</item>
        <item name="bottomNavInactiveTint">@color/grey</item>
        <item name="courseTitleColor">@color/white</item>
        <item name="separator">@color/black_charcoal</item>
        <item name="chipColor">@color/grey</item>



    </style>

</resources>